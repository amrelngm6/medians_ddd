{% include 'views/admin/includes/header.html.twig' %}

<main id="form-page" class="w-full overflow-auto">
    <div class="content container-fluid">
        
        <form action="/api/update" method="POST" data-refresh="1" id="signup-form" class="ajax-form action ">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Basic Details</h5>
                        </div>
                        <div class="card-body pt-0">
                            <div class="settings-form">
                                <input name="type" type="hidden" value="Settings.update">
                                <label class="block py-5">
                                    <span class="text-gray-700">Sitename <span class="star-red">*</span></span>
                                    <input name="params[settings][sitename]" type="text" class="h-10 mt-3 rounded w-full border px-3 text-gray-400  focus:border-blue-100 dark:bg-gray-800 dark:border-gray-600" required placeholder="Site name" value="{{ app.Settings.sitename }}">
                                </label>
                                <label class="block py-5">
                                    <span class="text-gray-700">Currency <span class="star-red">*</span></span>
                                    <input name="params[settings][currency]" type="text" class="h-10 mt-3 rounded w-full border px-3 text-gray-400  focus:border-blue-100 dark:bg-gray-800 dark:border-gray-600" placeholder="Currency" required value="{{ app.Settings.currency }}">
                                </label>


                                <!-- <div class="row">
                                    <div class="col-lg-5 col-md-6">
                                        <div class="form-group">
                                            <div class="status-toggle d-flex justify-content-between align-items-center">
                                                <p class="mb-0">RTL</p>
                                                <input {% if app.Settings.country == 'Egypt' %} selected {% endif %}  type="checkbox" id="status_1" class="check">
                                                <label for="status_1" class="checktoggle">checkbox</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                 -->
                                <label class="block py-5">
                                    <span class="text-gray-700"> Minimum Stock alert ( Number ) <span class="star-red">*</span></span>
                                    <input name="params[settings][stock_alert]" type="number" class="h-10 mt-3 rounded w-full border px-3 text-gray-400  focus:border-blue-100 dark:bg-gray-800 dark:border-gray-600" placeholder="Stock alert" required value="{{ app.Settings.stock_alert }}">
                                </label>



                                <div class="form-group">
                                    <label>Address  <span class="star-red">*</span></label>
                                    <input name="params[settings][address]" type="text" class="h-10 mt-3 rounded w-full border px-3 text-gray-400  focus:border-blue-100 dark:bg-gray-800 dark:border-gray-600" placeholder="Enter Address Line 2" required value="{{ app.Settings.address }}">
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>City <span class="star-red">*</span></label>
                                            <input name="params[settings][city]" type="text" class="h-10 mt-3 rounded w-full border px-3 text-gray-400  focus:border-blue-100 dark:bg-gray-800 dark:border-gray-600" required value="{{ app.Settings.city }}">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Country </label>
                                            <select class="select h-10 mt-3 rounded w-full border px-3 text-gray-400  focus:border-blue-100 dark:bg-gray-800 dark:border-gray-600 " name="params[settings][country]">
                                                <option {% if app.Settings.country == 'Egypt' %} selected {% endif %} value="Egypt">Egypt</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Address Details</h5>
                        </div>
                        <div class="card-body pt-0">
                            <div class="settings-form">
                                <div class="form-group">
                                    <label>Address  <span class="star-red">*</span></label>
                                    <input name="params[settings][address]" type="text" class="h-10 mt-3 rounded w-full border px-3 text-gray-400  focus:border-blue-100 dark:bg-gray-800 dark:border-gray-600" placeholder="Enter Address Line 2" required value="{{ app.Settings.address }}">
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>City <span class="star-red">*</span></label>
                                            <input name="params[settings][city]" type="text" class="h-10 mt-3 rounded w-full border px-3 text-gray-400  focus:border-blue-100 dark:bg-gray-800 dark:border-gray-600" required value="{{ app.Settings.city }}">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Country </label>
                                            <select class="select h-10 mt-3 rounded w-full border px-3 text-gray-400  focus:border-blue-100 dark:bg-gray-800 dark:border-gray-600 " name="params[settings][country]">
                                                <option {% if app.Settings.country == 'Egypt' %} selected {% endif %} value="Egypt">Egypt</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">Invoice info</h5>
                        </div>
                        <div class="card-body pt-0">
                            <div class="settings-form">
                                <div class="form-group">
                                    <label>Invoice notes  <span class="star-red">*</span></label>
                                    <textarea name="params[settings][invoice_notes]" rows="4" class="mt-3 rounded w-full border px-3 text-gray-400  focus:border-blue-100 dark:bg-gray-800 dark:border-gray-600" placeholder="Enter Address Line 2" required >{{ app.Settings.invoice_notes }}</textarea>
                                </div>
                                <div class="form-group">
                                    <label>Invoice terms & conditions  <span class="star-red">*</span></label>
                                    <textarea name="params[settings][invoice_notes]" rows="4" class="mt-3 rounded w-full border px-3 text-gray-400  focus:border-blue-100 dark:bg-gray-800 dark:border-gray-600" placeholder="Enter Address Line 2" required >{{ app.Settings.invoice_terms }}</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-transparent mb-0 mx-4">
                    <div class=" text-gray-600">
                        <button type="submit" class="border-0 btn btn-primary btn-gradient-primary btn-rounded bg-purple-600">Update</button>&nbsp;&nbsp;
                    </div>
                </div>
            </form>
        </div>
    </div>
    
</main>
{% include 'views/admin/includes/footer.html.twig' %}