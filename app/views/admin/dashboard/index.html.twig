{% if app.auth.id > 0 %}
{% include 'views/admin/includes/header.html.twig' %}
<div class="w-full ">
    <div class="mb-6">
        <div class="row pt-2">
            <div class="col-md-4">
                <div class="card bg-gradient-danger card-img-holder text-white h-100">
                    <div class="card-body">
                        <img src="/uploads/img/circle.png" class="card-img-absolute" alt="circle-image">
                        <h4 class="font-weight-normal mb-3">Properties</h4>
                        <span>{{properties_count}}</span>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-gradient-info card-img-holder text-white h-100">
                    <div class="card-body">
                        <img src="/uploads/img/circle.png" class="card-img-absolute" alt="circle-image">
                        <h4 class="font-weight-normal mb-3">Leads</h4>
                        <span>{{leads_count}}</span>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-gradient-success card-img-holder text-white h-100">
                    <div class="card-body">
                        <img src="/uploads/img/circle.png" class="card-img-absolute" alt="circle-image">
                        <h4 class="font-weight-normal mb-3">Projects</h4>
                        <span>1</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="w-full lg:flex gap gap-6 ">
        <div class="card mb-0 w-full">
            <h4 class="p-4 ml-4">Latest Leads</h4>
            <hr />
            <div class="card-body w-full">
                <div class="col-md-12">
                    <div class="table-responsive w-full">
                        <table class="w-full table table-striped table-nowrap custom-table mb-0 datatable">
                            <thead>
                                <tr>
                                    <th class="w-10">ID</th>
                                    <th>Name</th>
                                    <th>Phone</th>
                                    <th>Agent</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in leads %}
                                <tr class="text-center">
                                    <td>
                                        {{item.id}}
                                    </td>
                                    <td>
                                        <a href="/leads/edit/{{item.id}}"><span class="person-circle-a person-circle">A</span></a>
                                        <a href="/leads/edit/{{item.id}}" data-bs-toggle="modal" data-bs-target="#leads-details">{{item.name()}}</a>
                                    </td>
                                    <td>{{item.phone}}</td>
                                    <td>{{item.Agent.name}}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mb-0 w-full">
            <h4 class="p-4 ml-4">Latest Leads</h4>
            <hr />
            <div class="card-body w-full">
                <div class="col-md-12">
                    <div class="table-responsive w-full">
                        <table class="w-full table table-striped table-nowrap custom-table mb-0 datatable">
                            <thead>
                                <tr>
                                    <th class="w-10">ID</th>
                                    <th>Name</th>
                                    <th>Phone</th>
                                    <th>Agent</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in leads %}
                                <tr class="text-center">
                                    <td>
                                        {{item.id}}
                                    </td>
                                    <td>
                                        <a href="/leads/edit/{{item.id}}"><span class="person-circle-a person-circle">A</span></a>
                                        <a href="/leads/edit/{{item.id}}" data-bs-toggle="modal" data-bs-target="#leads-details">{{item.name()}}</a>
                                    </td>
                                    <td>{{item.phone}}</td>
                                    <td>{{item.Agent.name}}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="block mt-6 w-full">
        <div class="card mb-0 w-full">
            <h4 class="p-4 ml-4">Latest properties</h4>
            <hr />
            <div class="card-body w-full">
                <div class="col-md-12">
                    <div class="table-responsive w-full">
                        <table class="w-full table table-striped table-nowrap custom-table mb-0 datatable">
                            <thead>
                                <tr>
                                    <th class="w-10">ID</th>
                                    <th>Owner</th>
                                    <th>Title</th>
                                    <th>Type</th>
                                    <th>Agent</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in properties %}
                                <tr class="text-center">
                                    <td>
                                        {{item.id}}
                                    </td>
                                    <td>
                                        <a href="/properties/user/{{item.id}}"><span class="person-circle-a person-circle">A</span></a>
                                        <a href="/properties/user/{{item.id}}" data-bs-toggle="modal" data-bs-target="#leads-details">{{item.owner.name}}</a>
                                    </td>
                                    <td><a href="/properties/edit/{{item.id}}">{{item.name}}</a> </td>
                                    <td>
                                        {{item.type}}
                                    </td>
                                    <td>{{item.agent_info.name}}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% include 'views/admin/includes/footer.html.twig' %}
{% else %}
{% include 'views/admin/forms/login.html.twig' %}
{% endif %}