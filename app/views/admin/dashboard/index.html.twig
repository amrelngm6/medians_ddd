{% if app.auth.id > 0 %}
{% include 'views/admin/includes/header.html.twig' %}
<div class="w-full">
    <h4 class="py-2">Latest properties</h4>
    <hr />
    <div class="card mb-0 w-full">
        <div class="card-body w-full">
            <div class="col-md-12">
                <div class="table-responsive w-full">
                    <table class="w-full table table-striped table-nowrap custom-table mb-0 datatable">
                        <thead>
                            <tr>
                                <th>
                                    <label class="container-checkbox">
                                        <input type="checkbox">
                                        <span class="checkmark"></span>
                                    </label>
                                </th>
                                <th class="w-10">ID</th>
                                <th>Owner</th>
                                <th>Title</th>
                                <th>Type</th>
                                <th>Agent</th>
                                <th>Offer type</th>
                                <th>Web view</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in properties %}
                            <tr class="text-center">
                                <td class="checkBox">
                                    <label class="container-checkbox">
                                        <input type="checkbox">
                                        <span class="checkmark"></span>
                                    </label>
                                </td>
                                <td>
                                    {{item.id}}
                                </td>
                                <td>
                                    <a href="/properties/edit/{{item.id}}"><span class="person-circle-a person-circle">A</span></a>
                                    <a href="/properties/edit/{{item.id}}" data-bs-toggle="modal" data-bs-target="#leads-details">{{item.owner.name}}</a>
                                </td>
                                <td><a href="/properties/edit/{{item.id}}">{{item.name}}</a> </td>
                                <td>
                                    {{item.type}}
                                </td>
                                <td>{{item.agent_info.name}}</td>
                                <td>{{item.request_type}}</td>
                                <td class="text-center">
                                    <div class="status-toggle mx-auto">
                                        <input id="status_{{item.id}}" {% if item.web %} @click="changeStatus('0', 'Property', {{item.id}})" checked {% else %} @click="changeStatus(1, 'Property', {{item.id}})" {% endif %} class="check" type="checkbox">
                                        <label for="status_{{item.id}}" class="checktoggle checkbox-bg mx-auto">checkbox</label>
                                    </div>
                                </td>
                                <td>
                                    {% if item.can('edit_contct', app) %}
                                    <a href="/properties/edit/{{item.id}}" class="font-bold"> Edit</a>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% include 'views/admin/includes/footer.html.twig' %}
{% else %}
{% include 'views/admin/forms/login.html.twig' %}
{% endif %}